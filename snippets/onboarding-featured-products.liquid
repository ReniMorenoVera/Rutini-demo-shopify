{%- if product_style == 'list'  -%}
	{%- for i in (1..4) -%}
		<div class="product-card product-list-style d-flex {% if strGridItem %}{{ strGridItem }}{% else %}slick-carousel__item{% endif %}">
			<div class="product-card__image-wrapper">
				<a class="product-card__image-link" href="/products/camisa-fiesta-hombre-roja-copia">
					{% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}
					{{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
				</a>
			</div>
			<div class="product-card__content position-relative">
				<div class="product-card__name fw-bold">
					<a href="/products/camisa-fiesta-hombre-roja-copia">Purina Pro Plan Focus Sensitive Skin</a>
				</div>
				<div class="product-card__price">
					<div class="product-group-price">
						<div class="product-price">$29.99</div>
					</div>
				</div>
				<div class="product-card__buttons d-none">
					<div class="product-card__form">
						<a class="btn btn--add-to-cart" href="/products/camisa-fiesta-hombre-roja-copia">
							{% include 'icons', icon: 'shopping-bag' %}
							<span>{{ 'products.product.add_to_cart' | t }}</span>
						</a>
					</div>
					{%- if settings.quickview_enable -%}
						<div class="product-card__quickview">
							<a class="btn btn--quickview" href="/products/camisa-fiesta-hombre-roja-copia">
								{% include 'svg-definitions' with 'search-thin' %}
								<span>{{ 'products.product.quickview' | t }}</span>
							</a>
						</div>
					{%- endif -%}
				</div>
			</div>
		</div>
	{%- endfor -%}
{%- else -%}
	{%- for i in (1..8) -%}
		<div class="product-card product-grid {% if strGridItem %}{{ strGridItem }}{% else %}slick-carousel__item{% endif %}">
			<div class="product-card__image-wrapper">
				<a class="product-card__image-link" href="/products/camisa-fiesta-hombre-roja-copia">
					{% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
					{{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
				</a>
				<div class="product-card__label">
					<span class="label-new"><span class="d-block overflow-hidden px-1">{{ 'products.product.label_new' | t }}</span></span>
					{%- if forloop.index == 2 -%}
						<span class="label-on-sale"><span class="d-block overflow-hidden px-1">{{ 'products.general.save_html' | t: saved_amount: 30 }}%</span></span>		
					{%- endif -%}
					{%- if forloop.index == 4 -%}
						<span class="label-sold-out"><span class="d-block overflow-hidden px-1">{{ 'products.product.sold_out_html' | t }}</span></span>		
					{%- endif -%}
				</div>
				{%- if settings.quickview_enable -%}
				<a class="d-flex justify-content-center align-items-center btn--quickview position-absolute rouned-circle end-0 bottom-0 rounded-2 m-3" href="/products/camisa-fiesta-hombre-roja-copia" data-bs-toggle="tooltip" data-bs-placement="top" data-handle="{{ product.handle }}" title="{{ 'products.product.quickview' | t }}">
					{% include 'icons', icon: 'arrow_condense', attr: 'width="16px" height="16px"' %}
					<span class="d-none">{{ 'products.product.quickview' | t }}</span>
					<div class="d-none proShortDesc">
						{{ shortDescription }}
					</div>
				</a>
			{%- endif -%}
			</div>
			<div class="product-card__content position-relative">
				<div class="product-card__content--inner  position-relative mt-3 pe-4">
					{%- if settings.product_vendor_enable -%}
						<p class="product-card__vendor">Demo Vendor</p>
					{%- endif -%}
					<div class="product-card__name fst-italic">
						<a href="/products/camisa-fiesta-hombre-roja-copia">Sacrificial Chair Design</a>
					</div>
					<div class="product-card__price">
						<div class="product-group-price d-flex">
							<div class="product-price">$29.99</div>
							{%- if forloop.index == 2 -%}
								<div class="product-price product-price--regular ms-1"><span class="money">$90.99</span></div>
							{%- endif -%}
						</div>
					</div>
					{%- if settings.product_card_addtocart -%}
						{%- unless forloop.index == 4 -%}
							<div class="product-card__buttons">
								<div class="product-card__form">
									<a class="btn btn--add-to-cart" href="/products/camisa-fiesta-hombre-roja-copia">
										{%- render 'icons', icon: 'shopping-bag', attr: 'width="22px"' -%}
										<span class="d-none">{{ 'products.product.add_to_cart' | t }}</span>
									</a>
								</div>
							</div>
						{%- endunless -%}
					{%- endif -%}
				</div>
			</div>
		</div>
	{%- endfor -%}
{%- endif -%}
