<footer id="footer" class="footer">
  <div
    class="footer-inner position-relative lazyload js"
    style="background: black; padding: 20px"
  >
  <div>
    <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        <div style="display: flex; flex-direction: column; gap: 24px;">
            <div>
                <img src="/cdn/shop/t/19/assets/logo.svg?v=173018033744185636721756954952" alt="">
            </div>
        </div>

<div class="footer-links" style="display:flex; gap:40px; flex-wrap:wrap;">
  {%- for block in section.blocks -%}
    {%- if block.type == 'links_column' -%}
      <div class="footer-col" {{ block.shopify_attributes }} style="min-width:180px">
        {%- if block.settings.heading != blank -%}
          <h4 style="margin:0 0 12px; font-weight:600; font-size:16px; color:#fff;">
            {{ block.settings.heading }}
          </h4>
        {%- endif -%}

        {%- if block.settings.menu != blank -%}
          <ul style="list-style:none; padding:0; margin:0; display:flex; flex-direction:column; gap:8px;">
            {%- for link in block.settings.menu.links -%}
              <li>
                <a href="{{ link.url }}" style="color:#fff; text-decoration:none; opacity:.9;">
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endfor -%}
</div>



        
        <div style="display: flex; flex-direction: column; align-items: flex-end;">
            <div style="display: flex; gap : 20px; align-items: flex-end;">
            <img style="width:38px; height: 38px;"
                src="https://dinagenboxtech.vtexassets.com/assets/vtex.file-manager-graphql/images/1fc53164-ec77-4d1b-a320-5ec161091711___36be8332247ea8a976d7dc8c3330a558.webp"
                alt="">
            <img style="width:38px; height: 38px;"
                src="https://dinagenboxtech.vtexassets.com/assets/vtex.file-manager-graphql/images/f6cd6ab5-7116-467f-8305-5e6f1cab215d___c9e9d986afb5aef349d39b405225b5d5.png"
                alt="">
            <img style="width:38px; height: 38px;"
                src="https://dinagenboxtech.vtexassets.com/assets/vtex.file-manager-graphql/images/8487b892-ccd7-4d74-9a2e-f1261feff092___11204ee653d507d77d315274ba6d2552.png"
                alt="">
        </div>
            <button
                style="background-color: transparent; padding: 11px 12px; border: 1px solid white; border-radius: 20px; color: white;">BOTÓN DE ARREPENTIMIENTO</button>
        </div>
    </div>

    <div style="display: flex; justify-content: space-around; border-top: 1px solid white; padding-top: 20px; margin-top: 20px; flex-wrap: wrap;">
        <div style="display: flex; gap : 10px">
            <p>Powered by Pierce commerce</p>
            <img style="width:76px; height: 17px;"
                src="https://dinagenboxtech.vtexassets.com/assets/vtex/assets-builder/dinagenboxtech.dinagenboxtech-store-theme/3.0.7/footer/pierce-logo___216532d0ea67b678bb537aada0dc23e0.png"
                alt="">
        </div>
        
        {% if section.settings.legal_notice != blank %}
          <div style="margin-bottom: 10px;">
            <div style="margin:0;">{{ section.settings.legal_notice }}</div>
          </div>
        {% endif %}
        

        <div style="display: flex;">
            <img style="width:36px; height: 50px;"
                src="https://dinagenboxtech.vtexassets.com/assets/vtex/assets-builder/dinagenboxtech.dinagenboxtech-store-theme/3.0.7/footer/fiscal___ca4f367f83d5a92fe6b7564b2b4bf92b.png"
                alt="">
        </div>
    </div>
</div>
  </div>
</footer>

