{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer-bg-image",
      "label": "Footer background Image"
    }
  ],
  "blocks": [
    {
  "type": "links_column",
  "name": "Links column",
  "limit": 6,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Enlaces"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu (Navigation)"
    }
  ]
}
    ,
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "newsletter_title",
          "placeholder": "Title for Block",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "newsletter_description",
          "placeholder": "Description for Block",
          "label": "Description"
        },
        {
          "type": "checkbox",
          "id": "newsletter_mailchimp",
          "label": "Use MailChimp",
          "default": true
        },
        {
          "type": "paragraph",
          "content": "Uncheck if You use Newsletter of Shopify. Email will be saved to shopify customer. Admin -> Customers -> Accepts Marketting. You must send invite account for customer."
        },
        {
          "type": "text",
          "id": "newsletter_form_action",
          "label": "MailChimp form action URL",
          "info": "[Where do I find my MailChimp form action URL?](https:\/\/www.youtube.com/watch?v=mQ6UFLP_iEI)"
        }
      ]
    },
    {
      "type": "contact_info",
      "name": "Contact info",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Block Contact info"
        },
        {
          "type": "text",
          "id": "contactinfo_heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "contactinfo_logo",
          "label": "Logo footer"
        },
        {
          "type": "range",
          "id": "logo_width",
          "min": 50,
          "max": 250,
          "step": 10,
          "default": 100,
          "unit": "px",
          "label": "Custom logo width"
        },
        {
          "type": "textarea",
          "id": "contactinfo_desc",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "contactinfo_add",
          "label": "Adress",
          "default": "1234 Heaven Stress, Beverly Hill."
        },
        {
          "type": "text",
          "id": "contactinfo_phone",
          "label": "Phone",
          "default": "Telephone: +01 234 567 89"
        },
        {
          "type": "text",
          "id": "contactinfo_email",
          "label": "Email",
          "default": "Email: info@gmail.com"
        },
        {
          "type": "text",
          "id": "contactinfo_time",
          "label": "Time",
          "default": "8:00 - 19:00, Monday - Saturday"
        },
        {
          "type": "header",
          "content": "Payment"
        },
        {
          "type": "checkbox",
          "id": "payment_enable",
          "label": "Enable Payment"
        },
        {
          "type": "image_picker",
          "id": "payment_image",
          "label": "Payment Logo"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Link List",
          "label": "Heading",
          "info": "A heading is required to display the menu."
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu",
          "info": "Displays only top-level menu items."
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Heading",
          "label": "Heading"
        },
        {
          "type": "html",
          "id": "subtext",
          "default": "<p>Share store details, promotions, or brand content with your customers.</p>",
          "label": "Content"
        }
      ]
    },
    {
      "type": "copyright",
      "name": "CopyRight",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Block Copyright"
        },
        {
          "type": "text",
          "id": "footer_copyright",
          "label": "Copyright",
          "placeholder": "Copyright"
        },
        {
          "type": "header",
          "content": "Social Link"
        },
        {
          "type": "checkbox",
          "id": "social_enable",
          "label": "Social enable?"
        }
      ]
    }
  ]
}
{% endschema %}
