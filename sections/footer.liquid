<footer id="footer" class="footer">
  <div
    class="footer-inner position-relative lazyload js"
    style="background: black; padding: 20px"
  >
  <div>
    <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        <div style="display: flex; flex-direction: column; gap: 24px;">
            <div>
                <img src="/cdn/shop/t/19/assets/logo.svg?v=173018033744185636721756954952" alt="">
            </div>
        </div>

        {%- comment -%} Columns of footer links (driven by Navigation menus) {%- endcomment -%}
<div class="footer-links" style="display:flex; gap:40px; flex-wrap:wrap;">
  {%- for block in section.blocks -%}
    {%- if block.type == 'links_column' -%}
      <div class="footer-col" {{ block.shopify_attributes }} style="min-width:180px">
        {%- if block.settings.heading != blank -%}
          <h4 style="margin:0 0 12px; font-weight:600; font-size:16px; color:#fff;">
            {{ block.settings.heading }}
          </h4>
        {%- endif -%}

        {%- if block.settings.menu != blank -%}
          <ul style="list-style:none; padding:0; margin:0; display:flex; flex-direction:column; gap:8px;">
            {%- for link in block.settings.menu.links -%}
              <li>
                <a href="{{ link.url }}" style="color:#fff; text-decoration:none; opacity:.9;">
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endfor -%}
</div>



